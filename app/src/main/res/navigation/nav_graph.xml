<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/onboardingFragment">

    <!-- New: welcome splash -->
    <fragment
        android:id="@+id/onboardingFragment"
        android:name="com.example.brewbuddy.presentation.onboarding.OnboardingFragment"
        android:label="Welcome">
        <action
            android:id="@+id/action_onboarding_to_enterName"
            app:destination="@id/enterNameFragment" />
    </fragment>

    <!-- New: enter name -->
    <fragment
        android:id="@+id/enterNameFragment"
        android:name="com.example.brewbuddy.presentation.onboarding.EnterNameFragment"
        android:label="@string/enter_name">
        <action
            android:id="@+id/action_enterName_to_home"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/onboardingFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.brewbuddy.presentation.home.HomeFragment"
        android:label="@string/tab_home">
        <argument
            android:name="drink_id"
            app:argType="integer" />
        <argument
            android:name="drinkTitle"
            app:argType="string" />
        <argument
            android:name="drinkPrice"
            app:argType="string" />
<!--        <argument-->
<!--            android:name="image"-->
<!--            app:argType="string" />-->
        <action
            android:id="@+id/actionHomeFragmentToProductDetailFragment"
            app:destination="@id/drinkDetailsFragment"/>
    </fragment>

    <fragment
        android:id="@+id/menuFragment"
        android:name="com.example.brewbuddy.presentation.drinks.DrinkMenuFragment"
        android:label="@string/tab_menu" />

    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.example.brewbuddy.presentation.favorites.FavoritesFragment"
        android:label="@string/tab_favorites" />

    <fragment
        android:id="@+id/ordersFragment"
        android:name="com.example.brewbuddy.presentation.orders.OrdersFragment"
        android:label="@string/tab_orders" />


    <fragment
        android:id="@+id/DrinkMenuFragment"
        android:name="com.example.brewbuddy.presentation.drinks.DrinkMenuFragment"
        android:label="Drinks" >
        <action
            android:id="@+id/action_drinkMenuFragment_to_favoriteFragment"
            app:destination="@id/favoriteDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/favoriteDetailsFragment"
        android:name="com.example.brewbuddy.presentation.drinkDetails.DrinkDetailsFragment"
        android:label="@string/tab_favorites" />

    <fragment
        android:id="@+id/drinkDetailsFragment"
       android:name="com.example.brewbuddy.presentation.drinkDetails.DrinkDetailsFragment"
        android:label="Drink Details"
        tools:layout="@layout/fragment_drink_details">

        <argument
            android:name="drink_id"
            app:argType="integer" />
        <argument
            android:name="drinkTitle"
            app:argType="string" />
        <argument
            android:name="drinkPrice"
            app:argType="string" />
        <argument
            android:name="image"
            app:argType="string" />
        <action
            android:id="@+id/action_drinkDetailsFragment_to_paymentFragment"
            app:destination="@id/paymentFragment" />
    </fragment>
    <fragment
        android:id="@+id/paymentFragment"
        android:name="com.example.brewbuddy.presentation.orders.PaymentFragment"
        android:label="payment">
        <argument
            android:name="drinkId"
            app:argType="integer" />
        <argument
            android:name="title"
            app:argType="string" />
        <argument
            android:name="quantity"
            app:argType="integer" />
        <argument
            android:name="price"
            app:argType="string" />
        <argument
            android:name="imageUrl"
            app:argType="string" />
    </fragment>

</navigation>
