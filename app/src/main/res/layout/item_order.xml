<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="10dp"
    app:strokeWidth="2dp"
    app:strokeColor="#834D1E"
    app:cardBackgroundColor="#FCF2D9"
    android:elevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:padding="8dp">

        <!-- Drink Image -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/drinkImage"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/sample_product_image"
            app:shapeAppearanceOverlay="@style/RoundedImage8" />

        <!--        <ImageView-->
<!--            android:id="@+id/drinkImage"-->
<!--            android:layout_width="75dp"-->
<!--            android:layout_height="75dp"-->
<!--            android:layout_alignParentStart="true"-->
<!--            android:layout_centerVertical="true"-->
<!--            android:scaleType="centerCrop"-->
<!--            android:src="@drawable/sample_product_image"-->
<!--            android:background="@drawable/image_background"-->
<!--            />-->



        <!-- Quantity -->
        <TextView
            android:id="@+id/quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/drinkImage"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="2x"
            android:textSize="14sp"
            android:textColor="#834D1E"
            android:fontFamily="@font/inter" />

        <!-- Title -->
        <TextView
            android:id="@+id/drinkName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/quantity"
            android:layout_alignBaseline="@id/quantity"
            android:layout_marginStart="4dp"
            android:text="Iced Lemonade"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#834D1E"
            android:fontFamily="@font/inter" />

        <!-- Date -->
        <TextView
            android:id="@+id/orderDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:text="04/02"
            android:textSize="11sp"
            android:textColor="#834D1E"
            android:fontFamily="@font/inter" />

        <!-- Details link -->
        <TextView
            android:id="@+id/details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/quantity"
            android:layout_toEndOf="@id/drinkImage"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:text="Details"
            android:textSize="12sp"
            android:textColor="#834D1E"
            android:fontFamily="@font/inter" />

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>
